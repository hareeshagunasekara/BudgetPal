<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Permissions -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BudgetPal"
        tools:targetApi="31">

        <activity
            android:name="com.example.budgetpal.budgetpal.ui.transactions.AddTransactionFragment"
            android:exported="false" />
        <!-- Launcher Activity -->
        <activity
            android:name="com.example.budgetpal.budgetpal.ui.welcome.WelcomeActivity"
            android:exported="true"
            android:theme="@style/Theme.BudgetPal">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Auth Activities -->
        <activity
            android:name="com.example.budgetpal.budgetpal.ui.auth.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.BudgetPal" />
        <activity
            android:name="com.example.budgetpal.budgetpal.ui.auth.SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.BudgetPal" /> <!-- Other Activities -->
        <activity
            android:name="com.example.budgetpal.budgetpal.ui.onboarding.OnboardingActivity"
            android:exported="false"
            android:theme="@style/Theme.BudgetPal" />
        <activity
            android:name="com.example.budgetpal.budgetpal.ui.dashboard.DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.BudgetPal" />
    </application>

</manifest>